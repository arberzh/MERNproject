<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Porosite</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
<div class="container">
        <h1 class="mt-3">Porosite</h1>
    <div class="d-flex flex-row-reverse">
        <div class="p-2">
            <a href="/porosite/shto"class="btn btn-success">ADD</a>
        </div>          
    </div>  
    <br>
    <table class="table table-bordered  table-striped">
        <thead>
            <tr>
                <th>Emri mbiemri</th>
                <th>Produkti</th>
            
            </tr>
        </thead>
        <tbody>
            <% porosite.forEach(element => { %>
                <tr>
                    <td><%= element.fullName %></td>
                    <td><%= element.product %></td>
                    <td><a href="/porosite/update?id=<%= element.id %>" class="link-warning">Ndrysho</a></td>
                    <td><a href="#" class="link-danger delete-link" data-student-id="<%= element.id %>">Fshij</a></td>
                </tr>
           <% }); %>
        </tbody>
    </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script>
         document.querySelectorAll('.delete-link').forEach(link => {
            link.addEventListener('click', function (event) {
                event.preventDefault(); 
                const porosiId = this.getAttribute('data-porosi-id');
                
                fetch(`/porosite/${porosiId}`, {
                    method: 'DELETE',
                }).then((res) => {
                    
                    location.reload()
                }).catch(error => {
                        console.error('Error:', error);
                });
            });
    });
    </script>
</body>
</html>